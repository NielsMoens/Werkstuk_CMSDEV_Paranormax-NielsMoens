{% extends "_layouts/site" %}

{% block content %}
    <section class="site-hero site-hero-innerpage overlay" data-stellar-background-ratio="0.5" style="background-image: url( );">
        <div class="container">
            <div class="row align-items-center site-hero-inner justify-content-center">
                <div class="col-md-8 text-center">

                    <div class="mb-5 element-animate">
                        <h1>Login</h1>
                    </div>
                </div>
            </div>
        </div>
    </section>
    <!-- END section -->

    <section class="site-section bg-light">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-5 box">
                    <h2 class="mb-5">Log in with your account</h2>
                    <form method="post" accept-charset="UTF-8">
                        {{ csrfInput() }}
                        {{ actionInput('users/login') }}

                        <div class="row">
                            <label for="loginName">Username</label>
                            <div class="col-md-12 form-group">
                                {{ input('text', 'loginName', craft.app.user.rememberedUsername, {
                                    id: 'loginName',
                                    autocomplete: 'username',
                                    class:'form-control'
                                }) }}
                            </div>
                        </div>
                        <div class="row mb-5">
                            <div class="col-md-12 form-group">
                                <label for="password">Password</label>
                                {{ input('password', 'password', null, {
                                    id: 'password',
                                    class:"form-control "
                                }) }}
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-6 form-group">
                                <input type="submit" value="Login" class="btn btn-primary">
                            </div>
                        </div>
                        {% if errorMessage is defined %}
                            <p>{{ errorMessage }}</p>
                        {% endif %}
                    </form>
                </div>
            </div>
        </div>
    </section>

{% endblock %}






